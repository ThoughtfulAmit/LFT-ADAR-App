<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/editTextPhoneNo1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Phn No."
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextPhoneNo2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPhoneNo1"
        android:layout_alignBottom="@+id/editTextPhoneNo1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Phn No."
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextPhoneNo3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPhoneNo2"
        android:layout_alignBottom="@+id/editTextPhoneNo2"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Phn No."
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextSMS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextPhoneNo1"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextPhoneNo2"
        android:layout_below="@+id/editTextSMS"
        android:layout_marginTop="54dp"
        android:text="Send SOS msg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="To change, GOTO &apos;&apos;SOS Nos.&apos;&apos; in Menu" />

</RelativeLayout>